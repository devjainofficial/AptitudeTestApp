@page "/Account/AccountConfirmation"

<div class="container" style="margin-top: 10rem;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4 border-0 bg-body-secondary">
                <div class="card-body text-center p-5">

                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill fs-1 text-dark"></i>
                    </div>

                    <h2 class="fw-bold mb-3">Registration Confirmed</h2>

                    <p class="text-muted mb-4">
                        <strong class="d-block">Email verified successfully!</strong>
                        Your account is currently <span class="text-dark fw-semibold">pending admin approval</span>.
                        Please contact the administrator or wait for confirmation.
                    </p>

                    <a class="btn btn-dark px-4 py-2 rounded-pill" href="/Account/Login">
                        Go to Login Page
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
