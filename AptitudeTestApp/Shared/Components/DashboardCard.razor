<div class="card text-white shadow-sm rounded-4 h-100 border-0" onclick="@OnClick"
     style="cursor: pointer; background: @(string.IsNullOrWhiteSpace(Gradient) ? "linear-gradient(135deg, #000428, #004e92)" : Gradient);">
    <div class="card-body d-flex flex-column justify-content-between h-100">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h3 class="fw-bold mb-1">@Count</h3>
                <p class="text-white-50 mb-0">@Title</p>
            </div>
            <i class="fas fa-@Icon fa-2x text-white-50"></i>
        </div>
        <div class="mt-3">
            <a href="@Link" class="text-white text-decoration-none fw-semibold small">
                View Details <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public int Count { get; set; }
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Gradient { get; set; } = "";
    [Parameter] public string Link { get; set; } = "#";

    private void OnClick()
    {
        if (!string.IsNullOrWhiteSpace(Link))
        {
            NavigationManager.NavigateTo(Link);
        }
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
}
