@page "/test/unavailable"
@inject NavigationManager Navigation

<PageTitle>Test Unavailable</PageTitle>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: #fff;">
    <div class="text-center border border-dark rounded p-5 shadow-sm" style="max-width: 600px;">
        <i class="bi bi-shield-lock-fill" style="font-size: 3rem; color: black;"></i>
        <h2 class="mt-3 fw-bold">Test Not Accessible</h2>
        <p class="text-muted">Unfortunately, you are unable to take or resume this test. This may be due to one of the following reasons:</p>

        <ul class="text-start text-muted small">
            <li>The test submission has already been completed.</li>
            <li>The test time limit has expired.</li>
            <li>You have been disqualified from the test.</li>
        </ul>

        <p class="text-muted">If you believe this is a mistake or you need further assistance, please contact your university or test administrator.</p>
    </div>
</div>
