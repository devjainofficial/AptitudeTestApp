<div class="card rounded-4 h-100 theme-box dashboard-card" onclick="@OnClick" style="cursor: pointer;">
    <div class="card-body d-flex flex-column justify-content-between h-100">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="text-start">
                <h5 class="fw-semibold text-dark mb-1">@Title</h5>
                <h3 class="fw-bold text-dark">@Count</h3>
            </div>
            <i class="fas fa-@Icon fa-2x text-secondary"></i>
        </div>
        <div class="text-start">
            <a href="@Link" class="text-danger fw-medium small text-decoration-none">
                View Details <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public int Count { get; set; }
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Link { get; set; } = "#";

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private void OnClick()
    {
        if (!string.IsNullOrWhiteSpace(Link))
        {
            NavigationManager.NavigateTo(Link);
        }
    }
}
